#recent-posts
  & > .recent-post-item:not(:first-child)
    margin-top: 30px

  & > .recent-post-item
    a.article-link
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      z-index: 10
      opacity: 0
      &:hover
        opacity: 0
      &:active
        opacity: 0

    @extend .cardHover
    position: relative
    overflow: hidden
    height: 22em
    background: #000
    cursor: pointer

    +maxWidth768()
      height: 18em

    &::after
      content: ''
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      z-index: 3
      pointer-events: none
      background: transparent
      transition: all 0.2s ease
      
    &:active::after
      background: rgba(255,255,255,0.1)

    &:hover
      img.post_bg
        transform: scale(1.03)
      box-shadow: 0 5px 15px rgba(0,0,0,0.3)
      
    &:active
      transform: scale(0.98) translateY(1px)
      transition: all 0.1s ease
      box-shadow: 0 2px 8px rgba(0,0,0,0.2) !important

    &.ads-wrap
      display: block !important
      height: auto !important

    .post_cover
      position: absolute
      width: 100%
      height: 100%
      z-index: 1

      img.post_bg
        @extend .imgHover
        width: 100%
        height: 100%
        object-fit: cover
        opacity: 0.8

    & >.recent-post-info
      position: absolute
      z-index: 2
      padding: 0 0 2em 2em
      width: 100%
      bottom: 0
      left: 0
      display: block
      color: #fff !important
      text-shadow: 0 2px 4px rgba(0,0,0,0.9)
      background: linear-gradient(to top, rgba(0,0,0,0.7) 0%, transparent 100%)

      +maxWidth768()
        padding: 0 0 1.5em 1.5em

      & > .article-title
        color: #fff !important
        font-size: 1.72em
        line-height: 1.4
        transition: all .2s ease-in-out
        margin-bottom: 0.5em
        display: block
        white-space: normal
        word-break: break-word
        overflow: visible

        +maxWidth768()
          font-size: 1.43em

        &:hover
          opacity: 0.9

      & > .article-meta-wrap
        margin: 6px 0
        color: rgba(255,255,255,0.9) !important
        font-size: 90%

        & > .post-meta-date
          cursor: default

        .sticky
          color: $sticky-color

        i
          margin: 0 4px 0 0

        .article-meta-label
          if hexo-config('post_meta.page.label')
            padding-right: 4px
          else
            display: none

        .article-meta-separator
          margin: 0 6px

        .article-meta-link
          margin: 0 4px
          color: #fff !important

        if hexo-config('post_meta.page.date_format') == 'relative'
          time
            display: none

        a
          color: #fff !important

          &:hover
            opacity: 0.8
            text-decoration: underline

      & > .content
        display: none